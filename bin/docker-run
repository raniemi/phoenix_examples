#!/bin/bash
ARGS=$@
OWNER=raniemi
PROJECT=phoenix_examples
SRC_DIR=/code

REPOSITORY=$OWNER/$PROJECT
CONTAINER_HOME=$SRC_DIR/$PROJECT
CONTAINER_MIX_HOME=$CONTAINER_HOME/.mix
PORT=4000

docker run -it --rm --name $PROJECT -e "MIX_HOME=$CONTAINER_MIX_HOME" -p $PORT:$PORT -v "$PWD":$CONTAINER_HOME -w $CONTAINER_HOME $REPOSITORY bash -c "$ARGS"
